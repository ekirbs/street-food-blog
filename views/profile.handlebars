  <article class="card-profile-two zoom">
  <div class="column">
    <h3>Create a Post &#9997 &#9997</h3>
    <form class="new-post-form">
      <div>
        <label for="title">Post Title</label>
        <input type="text" id="title" name="title" style="width: 30%;" />
      </div>

      <div>
        <label for="post-body">Post Body</label>
        <textarea type="text" rows="4" id="post-body" name="post-body" style=" width: 100%"></textarea>
      </div>

      <button type="submit" class="create-post-btn">Create Post</button>

    </form>
  </div>
  </article>


</div>

{{#if posts}}
<div class="myPosts">

  <h3>Your Posts:</h3>
  {{#each posts as |post| }}
  <div class="card">
    <div class="row mb-4 post">

      <div class="col-md-5">
        <h2>
          {{{get_img}}}
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Created by: {{user.username}}</p>
      </div>

      <div class="col-md-7">
        <p>
          {{post.post_body}}
        </p>
      </div>

      <a href="/profile/editPost/{{post.id}}" class="edit-post">Edit Your Post</a>
      <button type="delete" class="delete-post-btn {{post.id}}" data-id="{{post.id}}">Delete This Post</button>


    </div>
  </div>
</div>
{{/each}}
{{/if}}

<script src="/js/createPost.js"></script>