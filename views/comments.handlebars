<section class="comment-section">
  {{#each comments as |comment| }}
  <div class="row mb-4 comment">
    <div class="col-md-5">
      <h2>
        <a href="/editComment/{{comment.id}}">{{comment.title}}</a>
      </h2>
      <p>Created by: {{user.username}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{comment.comment_body}}
      </p>
    </div>
  </div>
  {{/each}}
</section>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}